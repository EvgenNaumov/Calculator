<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#e91e63</item>
        <item name="colorPrimaryDark">#b0003a</item>
        <item name="colorAccent">#ff6090</item>
    </style>

    <style name="AppThemeDefault" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#B1ECE6</item>
        <item name="colorPrimaryDark">#044A44</item>
        <item name="colorAccent">#0CB6A8</item>
    </style>


    <style name="MyStyle_Landscape" parent="AppTheme">
        <item name="android:layout_weight">@dimen/width_landscape</item>
        <item name="android:layout_height">@dimen/height_landscape</item>
        <item name="android:layout_margin">@dimen/no_margin</item>
        <item name="android:padding">@dimen/no_padding</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MyStyle_Portrait" parent="AppTheme">
        <item name="android:layout_height">@dimen/height_portrait</item>
        <item name="android:layout_margin">@dimen/no_margin</item>
        <item name="android:padding">@dimen/no_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>